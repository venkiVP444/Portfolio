@model PortfolioViewModel
@{
    ViewData["Title"] = "Home";
}

<div class="min-h-screen bg-gradient-to-br from-gray-900 via-gray-800 to-gray-900">
    <nav class="navbar fixed top-0 left-0 right-0 z-50 transition-all duration-300" id="navbar">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between items-center h-16">
                <div class="flex-shrink-0">
                    <a href="#" class="text-2xl font-bold text-white hover:text-cyan-400 transition-colors">
                        Venkatesh
                    </a>
                </div>

                <div class="hidden md:flex items-center space-x-8">
                    <a href="#about" class="nav-link text-gray-300 hover:text-white transition-colors duration-200 relative group">
                        About
                        <span class="absolute -bottom-1 left-0 w-0 h-0.5 bg-cyan-400 transition-all duration-300 group-hover:w-full"></span>
                    </a>
                    <a href="#projects" class="nav-link text-gray-300 hover:text-white transition-colors duration-200 relative group">
                        Projects
                        <span class="absolute -bottom-1 left-0 w-0 h-0.5 bg-cyan-400 transition-all duration-300 group-hover:w-full"></span>
                    </a>
                    <a href="#articles" class="nav-link text-gray-300 hover:text-white transition-colors duration-200 relative group">
                        Articles
                        <span class="absolute -bottom-1 left-0 w-0 h-0.5 bg-cyan-400 transition-all duration-300 group-hover:w-full"></span>
                    </a>
                    <a href="#contact" class="nav-link text-gray-300 hover:text-white transition-colors duration-200 relative group">
                        Contact
                        <span class="absolute -bottom-1 left-0 w-0 h-0.5 bg-cyan-400 transition-all duration-300 group-hover:w-full"></span>
                    </a>
                </div>

                <div class="hidden md:flex items-center space-x-2 text-gray-300">
                    <i class="fas fa-globe h-4 w-4"></i>
                    <span class="text-sm">En / Ge</span>
                </div>

                <div class="md:hidden">
                    <button id="mobile-menu-btn" class="text-gray-300 hover:text-white transition-colors">
                        <i class="fas fa-bars h-6 w-6"></i>
                    </button>
                </div>
            </div>

            <div id="mobile-menu" class="md:hidden bg-gray-900/95 backdrop-blur-md border-t border-gray-800 hidden">
                <div class="px-2 pt-2 pb-3 space-y-1">
                    <a href="#about" class="mobile-nav-link block px-3 py-2 text-gray-300 hover:text-white hover:bg-gray-800 rounded-md transition-colors">About</a>
                    <a href="#projects" class="mobile-nav-link block px-3 py-2 text-gray-300 hover:text-white hover:bg-gray-800 rounded-md transition-colors">Projects</a>
                    <a href="#articles" class="mobile-nav-link block px-3 py-2 text-gray-300 hover:text-white hover:bg-gray-800 rounded-md transition-colors">Articles</a>
                    <a href="#contact" class="mobile-nav-link block px-3 py-2 text-gray-300 hover:text-white hover:bg-gray-800 rounded-md transition-colors">Contact</a>
                    <div class="flex items-center space-x-2 px-3 py-2 text-gray-300">
                        <i class="fas fa-globe h-4 w-4"></i>
                        <span class="text-sm">En / Ge</span>
                    </div>
                </div>
            </div>
        </div>
    </nav>

    <section id="about" class="min-h-screen flex items-center justify-center pt-16">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="text-center lg:text-left">
                <div class="max-w-4xl mx-auto lg:mx-0">
                    <h1 class="text-4xl md:text-6xl lg:text-7xl font-bold text-white mb-8 leading-tight">
                        Full-stack
                        <span class="bg-gradient-to-r from-cyan-400 to-blue-500 bg-clip-text text-transparent">
                            Developer
                        </span>
                    </h1>

                    <p class="text-xl md:text-2xl text-gray-300 mb-12 max-w-3xl mx-auto lg:mx-0 leading-relaxed">
                        My goal is to write maintainable, clean and understandable code so the development process is enjoyable.
                    </p>

                    <div class="flex justify-center lg:justify-start space-x-6 mb-12">
                        <div class="flex items-center space-x-2 bg-gray-800/50 px-4 py-2 rounded-full">
                            <i class="fas fa-code h-5 w-5 text-cyan-400"></i>
                            <span class="text-gray-300 text-sm">Frontend</span>
                        </div>
                        <div class="flex items-center space-x-2 bg-gray-800/50 px-4 py-2 rounded-full">
                            <i class="fas fa-server h-5 w-5 text-green-400"></i>
                            <span class="text-gray-300 text-sm">Backend</span>
                        </div>
                        <div class="flex items-center space-x-2 bg-gray-800/50 px-4 py-2 rounded-full">
                            <i class="fas fa-database h-5 w-5 text-purple-400"></i>
                            <span class="text-gray-300 text-sm">Database</span>
                        </div>
                    </div>

                    <div class="flex justify-center lg:justify-start">
                        <a href="#projects" class="group inline-flex items-center space-x-2 bg-white text-gray-900 px-8 py-4 rounded-full font-semibold hover:bg-gray-100 transition-all duration-300 hover:scale-105">
                            <span>View Projects</span>
                            <i class="fas fa-arrow-right h-5 w-5 group-hover:translate-x-1 transition-transform"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section class="py-16 bg-gray-900/50">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="text-center mb-12">
                <h2 class="text-3xl font-bold text-white mb-4">Let's Connect</h2>
                <p class="text-gray-300 max-w-2xl mx-auto">
                    Follow me on social media and let's build something amazing together
                </p>
            </div>

            <div class="flex flex-wrap justify-center gap-4">
                @foreach (var link in Model.SocialLinks)
                {
                    <a href="@link.Url" target="_blank" rel="noopener noreferrer"
                       class="group flex items-center space-x-3 bg-gray-800/50 hover:bg-gray-700/50 px-6 py-3 rounded-full transition-all duration-300 hover:scale-105">
                        <i class="@link.Icon h-5 w-5 text-gray-400 group-hover:text-cyan-400 transition-colors"></i>
                        <span class="text-gray-300 group-hover:text-white transition-colors">@link.Platform</span>
                    </a>
                }
            </div>
        </div>
    </section>

    <section id="projects" class="py-20 bg-gray-900/30">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="text-center mb-16">
                <h2 class="text-4xl font-bold text-white mb-4">Featured Projects</h2>
                <p class="text-xl text-gray-300 max-w-3xl mx-auto">
                    Here are some of my recent projects that showcase my skills and experience
                </p>
            </div>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                @foreach (var project in Model.Projects)
                {
                    <div class="bg-gray-800/50 backdrop-blur-sm rounded-2xl p-6 hover:bg-gray-700/50 transition-all duration-300 group">
                        <div class="flex flex-col h-full">
                            <div class="flex items-start justify-between mb-4">
                                @{
                                    string titleClasses = "text-white"; // Renamed for clarity, handles both solid and gradient
                                    string iconClasses = "";

                                    if (project.Id == "ugrolife")
                                    {
                                        titleClasses = "text-green-400"; // Solid green for UGroLife
                                        iconClasses = "fas fa-seedling h-5 w-5 text-green-400 flex-shrink-0";
                                    }
                                    else if (project.Id == "billsplit")
                                    {
                                        titleClasses = "bg-gradient-to-r from-cyan-400 to-blue-500 bg-clip-text text-transparent";
                                        iconClasses = "fas fa-mobile-alt h-5 w-5 text-cyan-400 flex-shrink-0";
                                    }
                                    else if (project.IsEnhanced)
                                    {
                                        titleClasses = "bg-gradient-to-r from-cyan-400 to-blue-500 bg-clip-text text-transparent";
                                        iconClasses = "fas fa-mobile-alt h-5 w-5 text-cyan-400 flex-shrink-0";
                                    }
                                }
                                <h3 class="text-xl font-semibold @titleClasses">
                                    @project.Title
                                </h3>
                                @if (!string.IsNullOrEmpty(iconClasses))
                                {
                                    <i class="@iconClasses"></i>
                                }
                            </div>

                            <p class="text-gray-300 mb-4 flex-grow">
                                @project.Description
                            </p>

                            <div class="flex flex-wrap gap-2 mb-4">
                                @foreach (var tech in project.Technologies)
                                {
                                    <span class="px-3 py-1 bg-gray-700/50 text-gray-300 rounded-full text-sm whitespace-nowrap">
                                        @tech
                                    </span>
                                }
                            </div>

                            @if (project.Features != null && project.Features.Any())
                            {
                                string toggleButtonTextColorClass = "text-cyan-400";
                                string featureBulletColorClass = "bg-cyan-400";
                                string toggleIconClass = "fas fa-mobile-alt";

                                if (project.Id == "ugrolife")
                                {
                                    toggleButtonTextColorClass = "text-green-400";
                                    featureBulletColorClass = "bg-green-400";
                                    toggleIconClass = "fas fa-leaf";
                                }
                                else if (project.Id == "billsplit")
                                {
                                    toggleButtonTextColorClass = "text-cyan-400";
                                    featureBulletColorClass = "bg-cyan-400";
                                    toggleIconClass = "fas fa-mobile-alt";
                                }
                                <div class="mb-4">
                                    <button class="toggle-features flex items-center space-x-2 @toggleButtonTextColorClass hover:@(project.Id == "ugrolife" ? "text-green-300" : "text-cyan-300") transition-colors"
                                            data-target="features-@project.Id">
                                        <i class="@toggleIconClass h-4 w-4"></i>
                                        <span class="text-sm font-medium">View Features</span>
                                        <i class="fas fa-chevron-down h-4 w-4 transition-transform"></i>
                                    </button>

                                    <div id="features-@project.Id" class="features-content mt-4 bg-gray-900/50 rounded-lg max-h-0 overflow-hidden transition-all duration-500 ease-in-out">
                                        <div class="space-y-2">
                                            @foreach (var feature in project.Features)
                                            {
                                                <div class="flex items-start space-x-2 text-sm text-gray-300">
                                                    <div class="w-2 h-2 @featureBulletColorClass rounded-full mt-2 flex-shrink-0"></div>
                                                    <span>@feature</span>
                                                </div>
                                            }
                                        </div>
                                    </div>
                                </div>
                            }   
                            <div class="flex space-x-4 mt-auto">
                                @if (!string.IsNullOrEmpty(project.GithubUrl))
                                {
                                    <a href="@project.GithubUrl" target="_blank" rel="noopener noreferrer"
                                       class="flex items-center space-x-2 text-gray-400 hover:text-white transition-colors">
                                        <i class="fab fa-github h-4 w-4"></i>
                                        <span class="text-sm">Code</span>
                                    </a>
                                }
                                @if (!string.IsNullOrEmpty(project.LiveUrl))
                                {
                                    <a href="@project.LiveUrl" target="_blank" rel="noopener noreferrer"
                                       class="flex items-center space-x-2 text-gray-400 hover:text-white transition-colors">
                                        <i class="fas fa-external-link-alt h-4 w-4"></i>
                                        <span class="text-sm">Live</span>
                                    </a>
                                }
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>

    <section id="articles" class="py-20">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="text-center mb-16">
                <h2 class="text-4xl font-bold text-white mb-4">Latest Articles</h2>
                <p class="text-xl text-gray-300 max-w-3xl mx-auto">
                    I write about software development, best practices, and lessons learned from building applications
                </p>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                @foreach (var article in Model.Articles)
                {
                    <article class="bg-gray-800/50 backdrop-blur-sm rounded-2xl p-6 hover:bg-gray-700/50 transition-all duration-300 group cursor-pointer">
                        <div class="flex items-center space-x-4 mb-4 text-sm text-gray-400">
                            <div class="flex items-center space-x-1">
                                <i class="fas fa-calendar h-4 w-4"></i>
                                <span>@article.Date</span>
                            </div>
                            <div class="flex items-center space-x-1">
                                <i class="fas fa-clock h-4 w-4"></i>
                                <span>@article.ReadTime</span>
                            </div>
                        </div>

                        <h3 class="text-xl font-semibold text-white mb-3 group-hover:text-cyan-400 transition-colors">
                            @article.Title
                        </h3>

                        <p class="text-gray-300 mb-4 line-clamp-3">
                            @article.Excerpt
                        </p>

                        <div class="flex flex-wrap gap-2 mb-4">
                            @foreach (var tag in article.Tags)
                            {
                                <span class="px-3 py-1 bg-gray-700/50 text-gray-300 rounded-full text-sm">
                                    @tag
                                </span>
                            }
                        </div>

                        <a href="@article.Url" class="inline-flex items-center space-x-2 text-cyan-400 hover:text-cyan-300 transition-colors">
                            <span class="text-sm font-medium">Read more</span>
                            <i class="fas fa-arrow-right h-4 w-4 group-hover:translate-x-1 transition-transform"></i>
                        </a>
                    </article>
                }
            </div>
        </div>
    </section>

    <section id="contact" class="py-20 bg-gray-900/50">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="text-center mb-16">
                <h2 class="text-4xl font-bold text-white mb-4">Get In Touch</h2>
                <p class="text-xl text-gray-300 max-w-3xl mx-auto">
                    I'm always open to discussing new opportunities, interesting projects, or just having a chat about technology
                </p>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-8 max-w-4xl mx-auto">
                <a href="mailto:@Model.ContactInfo.Email" target="_blank" rel="noopener noreferrer"
                   class="group flex items-center space-x-4 bg-gray-800/50 p-6 rounded-xl hover:bg-gray-700/50 transition-all duration-300 hover:scale-105">
                    <div class="p-3 rounded-full bg-gray-700/50 text-red-400">
                        <i class="fas fa-envelope h-6 w-6"></i>
                    </div>
                    <div class="flex-1">
                        <p class="text-gray-400 text-sm">Email</p>
                        <p class="text-white font-medium group-hover:text-cyan-400 transition-colors">
                            @Model.ContactInfo.Email
                        </p>
                    </div>
                </a>

                <a href="@Model.ContactInfo.LinkedIn" target="_blank" rel="noopener noreferrer"
                   class="group flex items-center space-x-4 bg-gray-800/50 p-6 rounded-xl hover:bg-gray-700/50 transition-all duration-300 hover:scale-105">
                    <div class="p-3 rounded-full bg-gray-700/50 text-blue-400">
                        <i class="fab fa-linkedin h-6 w-6"></i>
                    </div>
                    <div class="flex-1">
                        <p class="text-gray-400 text-sm">LinkedIn</p>
                        <p class="text-white font-medium group-hover:text-cyan-400 transition-colors">
                            linkedin.com/in/venkatesh
                        </p>
                    </div>
                </a>

                <a href="@Model.ContactInfo.GitHub" target="_blank" rel="noopener noreferrer"
                   class="group flex items-center space-x-4 bg-gray-800/50 p-6 rounded-xl hover:bg-gray-700/50 transition-all duration-300 hover:scale-105">
                    <div class="p-3 rounded-full bg-gray-700/50 text-gray-400">
                        <i class="fab fa-github h-6 w-6"></i>
                    </div>
                    <div class="flex-1">
                        <p class="text-gray-400 text-sm">GitHub</p>
                        <p class="text-white font-medium group-hover:text-cyan-400 transition-colors">
                            github.com/venkatesh
                        </p>
                    </div>
                </a>

                <a href="@Model.ContactInfo.WhatsApp" target="_blank" rel="noopener noreferrer"
                   class="group flex items-center space-x-4 bg-gray-800/50 p-6 rounded-xl hover:bg-gray-700/50 transition-all duration-300 hover:scale-105">
                    <div class="p-3 rounded-full bg-gray-700/50 text-green-400">
                        <i class="fab fa-whatsapp h-6 w-6"></i>
                    </div>
                    <div class="flex-1">
                        <p class="text-gray-400 text-sm">WhatsApp</p>
                        <p class="text-white font-medium group-hover:text-cyan-400 transition-colors">
                            Chat on WhatsApp
                        </p>
                    </div>
                </a>
            </div>

            <div class="mt-16 text-center">
                <div class="inline-flex items-center space-x-2 bg-gray-800/50 px-6 py-3 rounded-full">
                    <div class="w-2 h-2 bg-green-400 rounded-full animate-pulse"></div>
                    <span class="text-gray-300 text-sm">Available for new opportunities</span>
                </div>
            </div>
        </div>
    </section>

    <footer class="bg-gray-900/80 border-t border-gray-800 py-8">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="text-center">
                <p class="text-gray-400 text-sm">
                    © 2024 Venkatesh. Built with .NET Core, MVC, and modern CSS.
                </p>
            </div>
        </div>
    </footer>
</div>