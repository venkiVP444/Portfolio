@model Portfolio.Models.Article

@{
    ViewData["Title"] = Model.Title;
}

<div class="container mx-auto px-4 py-16 pt-32 min-h-screen text-gray-200">
    <div class="max-w-3xl mx-auto bg-gray-800/50 backdrop-blur-sm p-6 md:p-8 rounded-lg shadow-xl animate-fade-in-up">

        <a asp-action="Index" class="text-cyan-400 hover:text-cyan-300 transition-colors flex items-center space-x-2 mb-6">
            <i class="fas fa-arrow-left"></i>
            <span>Back to Articles</span>
        </a>

        <h1 class="text-4xl md:text-5xl font-bold mb-4 text-cyan-400">@Model.Title</h1>

        <div class="text-gray-400 text-sm mb-6 flex flex-wrap gap-x-4">
            <span class="flex items-center"><i class="far fa-calendar-alt mr-1"></i> @Model.Date</span>
            <span class="flex items-center"><i class="far fa-clock mr-1"></i> @Model.ReadTime</span>
            <div class="flex flex-wrap gap-1 mt-2 md:mt-0">
                @foreach (var tag in Model.Tags)
                {
                    <span class="bg-gray-700 text-gray-300 text-xs px-2 py-1 rounded-full">@tag</span>
                }
            </div>
        </div>

        <div class="prose prose-invert max-w-none text-gray-300 leading-relaxed text-lg" style="color: #cbd5e1;">
            @Html.Raw(Model.FullContent)
        </div>

        <div class="mt-8 pt-6 border-t border-gray-700">
            <a asp-action="Index" class="inline-flex items-center justify-center px-6 py-3 border border-transparent text-base font-medium rounded-md text-white bg-cyan-600 hover:bg-cyan-700 transition-colors shadow-md">
                <i class="fas fa-home mr-2"></i> Back to Home
            </a>
        </div>
    </div>
</div>

<style>
    .prose ul, .prose ol {
        padding-left: 1.5em;
        margin-bottom: 1em;
    }
    .prose ul li:before {
        content: "•"; 
        color: #06B6D4; 
        display: inline-block;
        width: 1em; 
        margin-left: -1em; 
    }
    .prose ol li:before {
        color: #06B6D4; 
    }
    .prose p {
        margin-bottom: 1em;
    }
    .prose h1, .prose h2, .prose h3, .prose h4, .prose h5, .prose h6 {
        color: #06B6D4; 
        margin-top: 1.5em;
        margin-bottom: 0.5em;
        font-weight: 600; 
    }
    .prose a {
        color: #38bdf8;
        text-decoration: underline;
    }
    .prose strong {
        color: #e0f2f7; 
    }
</style>